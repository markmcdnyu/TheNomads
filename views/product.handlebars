{{> header}}

<div class="parallax-container">
    <div class="parallax"><img class="image" src="/images/nomad1.jpeg" /></div>
    <style>
        .parallax-container {
            height: 50vh !important;
            overflow: hidden !important;
        }
        .image {
            width: 100% !important;
            background-position: center !important;
        }
    </style>
</div>

<div class="container product">
    <div class="row">
        <div class="col-md-3"></div>
        <h2 class="overflow-welcome">Welcome to TradeUp</h2>
    </div>
    <style>
        .overflow-welcome {
            overflow: visible;
            margin-top: -30vh;
            color: teal;
        }
    </style>
    <div class="row">
        <div class="col-md-4 col-sm-4">
            <a class="btn btn-default" href="/categories">All Categories</a>
        </div>
        <div class="col-md-2 col-sm-2">
            <a class="btn btn-default" href="/listing_form">Post A Item</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 products-container">
            {{#each products}}
            <div class="panel panel-default" data-product="{{id}}">
                <div class="panel-heading">
                    <button class="delete btn btn-danger">x</button>
                    <button class="edit btn btn-info">EDIT</button>
                    <h2>{{this.title}}</h2>
                    <small>{{createdAt}}</small>
                    </h2>
                    <h5 style="float: right; color: blue; margin-top: -10px;">Category: {{this.Category}} </h5>
                </div>
                <div class="panel-body">
                    <p>{{this.body}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<!-- Moment JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js" type="text/javascript"></script>
<!-- Custom Script -->
<script type="text/javascript" src="js/product.js"></script>

{{> footer}}